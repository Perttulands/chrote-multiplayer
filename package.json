{
  "name": "chrote-multiplayer",
  "version": "0.1.0",
  "description": "Collaborative multi-user environment for CHROTE personal clouds",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/server/index.ts",
    "dev:ui": "cd ui && bun run dev",
    "build": "bun build src/server/index.ts --outdir=dist --target=bun",
    "build:ui": "cd ui && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:headed": "bunx playwright test --headed",
    "test:e2e:debug": "bunx playwright test --debug",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun run db/migrate.ts",
    "db:seed": "bun run db/seed.ts",
    "db:reset": "rm -f data/chrote.db && bun run db:migrate && bun run db:seed",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@hocuspocus/server": "^3.4.4",
    "@hono/node-server": "^1.8.0",
    "arctic": "^2.0.0",
    "better-sqlite3": "^9.4.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "nanoid": "^5.0.0",
    "oslo": "^1.0.0",
    "yjs": "^13.6.29",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/bun": "^1.0.0",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.0"
  }
}
